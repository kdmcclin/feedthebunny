<div class="grid-container">
  <div class="large-12 columns">
    <h3>This prompt is:</h3>
    <p class="space"><%= @prompt.text %></div>

    <h3>Its categories:</h3>
    <% @prompt.categories.each do |c| %>
      <li><%= c.label %></li>
    <% end %>

    <div class="edit-links">
      <%= link_to 'Edit', edit_prompt_path(@prompt)%>
      <%= link_to 'New', new_prompt_path%>
      <%= link_to 'Delete', @prompt, method: :delete, action: 'destroy'  %>
    </div>
  </div>
</div>