  	<script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
  </head>

  <body>

    <div class="row">
      <h1>Welcome to Feed the Bunny</h1>
      <h2 class="subheader">Inspiring creativity with the click of a button.</h2>
		<div class="large-12 columns">
			<%= yield %>
	    	<%= javascript_include_tag "application" %>
		</div>
	</div>
  </body>
</html>